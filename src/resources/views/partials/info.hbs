<div class="top" method="get" action="/info">
    <button id="menu-btn">
        <span class="fi-rr-menu-burger"></span>
    </button>
    
    <div class="settingbar">
        <a href="/pos" class="btn btn-rounded btn-outline-primary">POS</a>
    </div>
    <div class="profile">
        <div class="info">
            <p>Hey, <b id="staffName">{{firstname}}</b></p>
            <small class="text-muted">{{role}}</small>
        </div>
        <div class="profile-photo">
            <a href="/profile">
                {{#if avt}}
                <img src="/uploads/{{avt}}" alt="" class="img-thumbnail">
                {{else}}
                <img src="/images/profile.png" class="img-thumbnail">
                {{/if}}
            </a>
        </div>
    </div>
</div>

<style>
    .language-dropdown {
        position: relative;
        display: inline-block;
    }

    .selected-language {
        padding: 6px;
        border: 1px solid #0d6efd;
        cursor: pointer;
    }

    .language-options {
        display: none;
        position: absolute;
        list-style: none;
        padding: 0;
        margin: 0;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .language-options li {
        padding: 8px;
        background-color: azure;
    }

    .language-options a {
        text-decoration: none;
        color: #0d6efd;
        font-weight: bolder;
        display: block;
    }

    .language-options a:hover {
        background-color: rgb(255, 255, 255);
    }
</style>

<script>
    function toggleDropdown() {
        var dropdown = document.getElementById('language-options');
        dropdown.style.display = dropdown.style.display === 'none' ? 'block' : 'none';
    }

    function changeLanguage(language) {
        var selectedLanguageText = document.getElementById('selected-language-text');
        selectedLanguageText.innerHTML = language;
        toggleDropdown();
    }

</script>