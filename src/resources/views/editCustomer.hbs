<div class="container-fluid">

    <div class="row">
        <div class="col-2 p-0">
            <!-- Sidebar content here -->
            {{>sidebar}}
        </div>
        <div class="col-10">
            <div id="right" class="right">
                {{>info}}
            </div>
            <div class="col-6 mx-auto " style="margin-top: 30px ;width: 50%;">
                <h1 class="">Sửa thông tin khách hàng {{customer.name}}</h1>
                <form action="/customer/update/{{customer._id}}" method="post" class="needs-validation" novalidate>
                    <div class="form-group">
                        <label for="nameCt">Họ và tên</label>
                        <input class="form-control" placeholder="Nhập tên khách hàng" id="nameCt" name="nameCt"
                            value="{{customer.name}}">
                    </div>
                    <div class="form-group">
                        <label for="phone">Số điện thoại</label>
                        <input class="form-control" placeholder="Nhập số điện thoại" id="phone" name="phone"
                            value="{{customer.phone}}">
                    </div>
                    <div class="form-group">
                        <label for="address">Địa chỉ</label>
                        <input class="form-control" placeholder="Nhập địa chỉ" id="address" name="address"
                            value="{{customer.address}}">
                    </div>
                    <button type="submit" name="submit" class="btn btn-success" style="margin-top: 15px;">Sửa thông tin
                        khách hàng</button>
                </form>
            </div>
        </div>

    </div>
</div>