        jQuery(document).on('click', '.product-remove', function () {
            jQuery(this).closest('.single-cart-item').remove();
            var productId = jQuery(this).find('i').data('product-id');
            console.log(productId);
            jQuery.ajax({
                url: '/cart/delete',
