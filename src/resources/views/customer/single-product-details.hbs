            if (isFavorite) {
                jQuery.ajax({
                    url: '/favorite/add',
                    method: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({ productId: productId }),
                    success: function (response) {
                        console.log(response);
                        jQuery(this).addClass("active");
                    },
                    error: function (err) {
                        console.log(err);
                        if (err.status === 401) {
                            alert('Hãy đăng nhập để thêm sản phẩm vào danh sách yêu thích');
                            setTimeout(function () {
                                window.location.href = '/cus/auth';
                            }, 1000);
                        }
                    }
                });

            } else {
                jQuery.ajax({
                    url: '/favorite/remove',
                    method: 'post',
                    contentType: 'application/json',
                    data: JSON.stringify({ productId: productId }),
                    success: function (response) {
                        console.log(response);
                        jQuery(this).removeClass("active");
                    },
                    error: function (err) {
                        console.log(err);
                        if (err.status === 401) {
                            alert('Hãy đăng nhập để thêm sản phẩm vào danh sách yêu thích');
