<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css1/login.css" />
  </head>

  <body>
    <div id="preloader">
      <div class="lds-ripple">
        <div></div>
      </div>
    </div>

    <div class="main-container">
      <div class="container">
        <div class="heading">
          <a class="navbar-brand" href="/login">
            <img class="mx-2" src="/images/logoWeb.png" />
          </a>
          <h2>Đăng nhập</h2>
        </div>
        <form id="login-form" class="input-container" method="post" action="/login">
          <div class="inputbox">
            <input
              type="text"
              name="name"
              id="username"
              required
              autocomplete="off"
            />
            <span>Tên tài khoản</span>
          </div>
          <div class="password-con">
            <div class="inputbox">
              <input
                type="password"
                name="password"
                id="password"
                required
                autocomplete="off"
              />
              <span>Mật khẩu</span>
            </div>
            <span class="material-icons" id="3">visibility_off</span>
          </div>
          <div class="btnbox" style="justify-content: center;">
            <button class="submit">
              <span class="btnText">Đăng nhập</span>
              <i class="uil uil-navigator"></i>
            </button>
          </div>
        </form>
